<article class="post container">
    <div class="well post-body first-post last-post">
        <h1><%- page.title %></h1>

        <div class="time-info">
            <%- partial('_partial/catetags', {item: page}) %>
        </div>
        <div class="time-info">
            发表: <time datetime="<%= date_xml(page.date) %>"
                       itemprop="datePublished"><%= page.date.format(config.date_format) %></time>
            <% if (page.updated!=null) { %>
            更新: <time datetime="<%= date_xml(page.updated) %>"
                       itemprop="dateModified"><%= page.updated.format(config.date_format) %></time>
            <% } %>
        </div>

        <div class="post-body-inner">
            <% if (toc(page.content) !== '') { %>
                <div id="toc" class="toc-article well">
                    <strong class="toc-title">大纲</strong>
                    <%- toc(page.content) %>
                </div>
            <% } %>

            <%- page.content %>

            <%- partial('_partial/post-info') %>

            <%- partial('_partial/comment') %>
        </div>
    </div>
</article>
